<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#666"
    tools:context=".FullScreenMenu"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_label"
        android:textSize="25sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coin Flipper"
        android:id="@+id/coinFlip"
        android:onClick="coinFlipperStart"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dice Roller"
        android:id="@+id/diceRoller"
        android:layout_gravity="center_horizontal"
        android:onClick="diceRollerStart"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="d20 Probablity Calculator"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="probStart" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="d6 Dice Pool &lt;WIP>"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:onClick="d6Pool" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="d20 Advantage/Disadvantage &lt;WIP>"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:onClick="d20AdvDis" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rock Paper Scissors &lt;WIP>"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:onClick="rockPaperScissors" />


</LinearLayout>
